@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Custom CSS */
    body {
        background-color:rgb(232, 234, 236); /* Light Gray background */
        font-family: Arial, sans-serif;
        color: #333; /* Dark Gray text for contrast */
    }

    .container {
        max-width: 1200px; /* Increased max-width for a wider container */
        margin-top: 5%;
    }

    h1, h2, h3 {
        color: #5f4b8b; /* Purple text for headers */
    }

    form {
        background-color: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    input.form-control {
        border-radius: 15px;
        border: 1px solid #d1d5db; /* Light gray border */
        transition: border 0.3s ease; /* Smooth transition for border color */
    }

    input.form-control:focus {
        border-color:rgb(103, 43, 216); /* Purple border on focus */
        outline: none; /* Remove the default outline */
        box-shadow: 0 0 0 2px rgba(111, 66, 193, 0.3); /* Optional: add a subtle glow around the border */
    }

    button[type="submit"] {
        background-color: #6f42c1; /* Purple button */
        color: white;
        border-radius: 8px;
        width: 100%;
        padding: 0.75rem;
        border: none;
    }

    button[type="submit"]:hover {
        background-color: #5a2a8b; /* Darker purple on hover */
    }

    a {
        text-decoration: none;
        color: #6f42c1; /* Purple link color */
    }

    a:hover {
        text-decoration: underline;
    }

    .form-check-label {
        margin-left: 5px;
    }
</style>

<div class="container">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <!-- Login Form Section -->
        <div class="col-md-8 col-lg-6">
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <!-- Email Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="form-check mb-3">
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Remember me
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg">Log in</button>
                    </div>

                    <!-- Links for Forgot Password, Register, and Email Confirmation -->
                    <div class="mt-3 text-center">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
