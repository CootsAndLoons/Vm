@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<VacationRequest>

<h2>My Vacation Requests</h2>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <input type="date" name="filterDate" class="form-control"
                   value="@Context.Request.Query["filterDate"]" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Type</td>
                <td>@request.StartDate.ToShortDateString()</td>
                <td>@request.EndDate.ToShortDateString()</td>
                <td>
                    @if (request.IsApproved)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!request.IsApproved)
                    {
                        <a asp-action="Edit" asp-route-id="@request.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@request.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, filterDate = Context.Request.Query["filterDate"] }))

<a asp-action="Create" class="btn btn-primary">New Request</a>