@model IEnumerable<Vm.Models.Project>
@{
    <h2>Projects</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Teams Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>@(project.Teams?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
}
