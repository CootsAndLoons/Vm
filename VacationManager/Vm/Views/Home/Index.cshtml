@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .dashboard-container {
        padding:1rem;
        display: flex;
        align-items: center;
    }

    .grid-card {
        background: rgba(255, 255, 255, 0.9) !important;
        border-radius: 15px;
        padding: .5rem;
        margin: .5rem;
        transition: all 0.3s ease;
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        outline: solid 1px;
        outline-color: rgba(0, 0, 0, 0.7);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .grid-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        .grid-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
            transform: rotate(45deg);
            transition: all 0.5s;
        }

        .grid-card:hover::before {
            animation: shine 1.5s;
        }

    .card-content {
        position: relative;
        z-index: 1;
        text-align: center;
        padding: 2rem;
    }

    .card-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: rgba(0, 0, 0, 0.7);
    }

    .card-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    @@keyframes shine {
        0% {
            left: -50%;
        }

        100% {
            left: 150%;
        }
    }
</style>

<div class="dashboard-container">
    <div class="container">
        <div class="row justify-content-center">
            @if (ViewBag.UserRole == "CEO")
            {
                <!-- First Row -->
                <div class="col-lg-5 mb-4">
                    <a href="../Teams/Index" class="grid-card h-100" style="background-color: rgba(188, 120, 240, 0.1)">
                        <div class="card-content">
                            <i class="fas fa-users card-icon"></i>
                            <h2 class="card-title">Teams</h2>
                        </div>
                    </a>
                </div>
                <div class="col-lg-7 mb-4">
                    <a href="../Leaves/Index" class="grid-card h-100" style="background-color: rgba(120, 190, 240, 0.1)">
                        <div class="card-content">
                            <i class="fas fa-calendar card-icon"></i>
                            <h2 class="card-title">Leaves</h2>
                        </div>
                    </a>
                </div>

                <!-- Second Row -->
                <div class="col-lg-8 mb-4">
                    <a href="../Projects/Index" class="grid-card h-100" style="background-color: rgba(128, 120, 240, 0.1)">
                        <div class="card-content">
                            <i class="fas fa-tasks card-icon"></i>
                            <h2 class="card-title">Projects</h2>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 mb-4">
                    <a href="../Users/Index" class="grid-card h-100" style="background-color: rgba(120, 234, 240, 0.1)">
                        <div class="card-content">
                            <i class="fas fa-user-friends card-icon"></i>
                            <h2 class="card-title">Users</h2>
                        </div>
                    </a>
                </div>
            }
            else if (SignInManager.IsSignedIn(User))
            {
                <!-- First Row -->
                <div class="col-lg-6 mb-4">
                    <a href="../Teams/Index" class="grid-card h-100" style="background-color: rgba(188, 120, 240, 0.1)">
                        <div class="card-content">
                            <i class="fas fa-users card-icon"></i>
                            <h2 class="card-title">Teams</h2>
                        </div>
                    </a>
                </div>
                <div class="col-lg-6 mb-4">
                    <a href="../Leaves/Index" class="grid-card h-100" style="background-color: rgba(120, 190, 240, 0.1)">
                        <div class="card-content">
                            <i class="fas fa-leaf card-icon"></i>
                            <h2 class="card-title">Leaves</h2>
                        </div>
                    </a>
                </div>

                <!-- Second Row -->
                <div class="col-12 mb-4">
                    <a href="../Projects/Index" class="grid-card h-100" style="background-color: rgba(128, 120, 240, 0.1)">
                        <div class="card-content">
                            <i class="fas fa-tasks card-icon"></i>
                            <h2 class="card-title">Projects</h2>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

